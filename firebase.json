{
    "hosting": {
      "public": "build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "*",
          "destination": "/index.html"
        }
      ]
    },
    "storage": {
      "rules": [
        {
          "origin": ["*"],
          "allow": ["read"]
        }
      ]
    }
  }
  